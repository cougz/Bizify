# Example .env file for Bizify
# Copy this file to .env and modify as needed

# Frontend configuration
FRONTEND_PORT=3000

# Nginx configuration
NGINX_SERVER_NAME=example.com
BACKEND_URL=http://backend:8000
CORS_ALLOW_ORIGIN=https://example.com

# Runtime configuration for reverse proxy
API_URL=/bizify/api
BASE_PATH=/bizify

# Backend configuration
# Add any backend-specific environment variables here
ALLOWED_HOSTS=example.com,localhost
PROXY_PREFIX=/bizify/api

# Database configuration
POSTGRES_USER=bizify
POSTGRES_PASSWORD=bizify_password
POSTGRES_DB=bizify
DATABASE_URL=postgresql://bizify:bizify_password@postgres:5432/bizify

# Security
SECRET_KEY=your_secret_key_here
